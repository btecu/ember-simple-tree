{{#if hasBlock}}
  {{#x-tree-branch
    checkable=checkable
    recursiveCheck=recursiveCheck
    chosenId=chosenId
    onCheck=onCheck
    onSelect=onSelect
    onHover=onHover
    onHoverOut=onHoverOut
    model=model
    expandedIcon=expandedIcon
    collapsedIcon=collapsedIcon
    as |node|
  }}
    {{yield node}}
  {{/x-tree-branch}}
{{else}}
  {{x-tree-branch
    model=model
    checkable=checkable
    recursiveCheck=recursiveCheck
    chosenId=chosenId
    onCheck=onCheck
    onSelect=onSelect
    onHover=onHover
    onHoverOut=onHoverOut
    expandedIcon=expandedIcon
    collapsedIcon=collapsedIcon
  }}
{{/if}}
