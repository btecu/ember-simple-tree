{{#if hasBlock}}
  {{yield
    (hash
      model=model
      toggle=(component "x-tree-toggle"
        model=model
        toggleExpand=(action "toggleExpand")
        expandedIcon=expandedIcon
        collapsedIcon=collapsedIcon
      )
      checkbox=(component "x-tree-checkbox"
        model=model
        toggleCheck=(action "toggleCheck")
      )
      toggleExpand=(action "toggleExpand")
      toggleCheck=(action "toggleCheck")
    )
  }}
{{else}}
  {{x-tree-toggle
    model=model
    toggleExpand=(action "toggleExpand")
    expandedIcon=expandedIcon
    collapsedIcon=collapsedIcon
  }}

  {{#if checkable}}
    {{x-tree-checkbox
      model=model
      toggleCheck=(action "toggleCheck")
    }}
  {{/if}}
  <span class="tree-label">
    {{model.name}}
  </span>
{{/if}}
